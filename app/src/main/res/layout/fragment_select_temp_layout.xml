<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/icon_card_shadow"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/id_rootview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_bar_height"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_cancel"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_main"
                android:textSize="@dimen/sp14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="水槽温度设置"
                android:textColor="@color/color_main"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/id_confirm"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/color_main"
                android:textSize="@dimen/sp14" />

        </LinearLayout>

        <com.zyyoona7.wheel.WheelView
            android:id="@+id/wheelview"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:textColor="@color/color_gray_33"
            />

    </LinearLayout>
</layout>
